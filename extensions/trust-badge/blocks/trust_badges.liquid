<div id="trust-badges-block">
  {%- if block.settings.heading -%}
    <{{ block.settings.heading_tag }} style="font-size:{{ block.settings.heading_size }};">
      {{ block.settings.heading }}
    </{{ block.settings.heading_tag }}>
  {%- endif -%}
  {%- if block.settings.description -%}
    <div>{{ block.settings.description }}</div>
  {%- endif -%}
</div>
<script>
  const APP_URL = "https://trust-badge.vercel.app";
  fetch(`${APP_URL}/trust`)
    .then(response => response.json())
    .then(data => {
      if (Array.isArray(data)) {
        const container = document.getElementById('trust-badges-block');
        const badgesHtml = data.map(badge => `
          <div style="margin-bottom:16px;">
            <img 
              src="${APP_URL}${badge.imageUrl}" 
              alt="Trust badge" 
              loading="lazy" 
              style="width:{{ block.settings.badge_width }}px;height:{{ block.settings.badge_height }}px;vertical-align:middle;margin-right:8px;" 
            />
          </div>
        `).join('');
        container.innerHTML += badgesHtml; // Append images after heading/description
      }
    })
    .catch(err => {
      console.error("Error fetching trust badges:", err);
    });
</script>

