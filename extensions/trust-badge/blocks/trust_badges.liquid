{{ 'app.css' | asset_url | stylesheet_tag }}
<div id="trust-badges-block">
  {%- if block.settings.heading != blank -%}
    <{{ block.settings.heading_tag }} class="{{ block.settings.heading_size }}">
      {{ block.settings.heading }}
    </{{ block.settings.heading_tag }}>
  {%- endif -%}
  {%- if block.settings.description != blank -%}
    <div>{{ block.settings.description }}</div>
  {%- endif -%}
</div>
<script>
  const APP_URL = "https://trust-badge.vercel.app";
  const SHOP = "{{ shop.permanent_domain }}";
  fetch(`${APP_URL}/trust?shop=${SHOP}`)
    .then(response => response.json())
    .then(data => {
      if (Array.isArray(data)) {
        const container = document.getElementById('trust-badges-block');
        const badgesHtml = data.map(badge => {
          const isFullUrl = badge.imageUrl.startsWith('http://') || badge.imageUrl.startsWith('https://');
          const imageSrc = isFullUrl ? badge.imageUrl : `${APP_URL}${badge.imageUrl}`;          
          return `
          <div class="trust-badge">
            <img 
              src="${imageSrc}" 
              alt="Trust badge" 
              loading="lazy" 
              width="{{ block.settings.badge_width }}" 
            />
          </div>
          `;
        }).join('');
        container.innerHTML += badgesHtml; 
      }
    })
    .catch(err => {
      console.error("Error fetching trust badges:", err);
    });
</script>

